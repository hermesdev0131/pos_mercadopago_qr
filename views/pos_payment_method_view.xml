<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit POS Payment Method Form View -->
        <record id="view_pos_payment_method_form_inherit" model="ir.ui.view">
            <field name="name">pos.payment.method.form.inherit.mercadopago</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <!-- Add MercadoPago QR checkbox after use_payment_terminal in its group -->
                <xpath expr="//group[.//field[@name='use_payment_terminal']]" position="inside">
                    <field name="use_mercadopago_qr" 
                           invisible="not use_payment_terminal"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
