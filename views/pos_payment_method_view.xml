<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_payment_method_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.mercadopago</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <!-- Position after the 'name' field (Method) - this is a known, unique field -->
            <!-- Using direct child selector for precise matching -->
            <xpath expr="//sheet/group/group/field[@name='name']" position="after">
                <field name="use_mercadopago_qr"/>
            </xpath>
        </field>
    </record>
</odoo>