<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit POS Payment Method Form View -->
        <record id="view_pos_payment_method_form_inherit" model="ir.ui.view">
            <field name="name">pos.payment.method.form.inherit.mercadopago</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <!-- Add field after the first group in the form -->
                <xpath expr="//sheet//group[1]" position="inside">
                    <field name="use_mercadopago_qr" string="Use MercadoPago QR"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
