<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit POS Payment Method Form View -->
        <record id="view_pos_payment_method_form_inherit" model="ir.ui.view">
            <field name="name">pos.payment.method.form.inherit.mercadopago</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <!-- Add MercadoPago QR field as a new group after existing groups -->
                <xpath expr="//sheet//group[1]" position="after">
                    <group string="MercadoPago Integration">
                        <field name="use_mercadopago_qr" widget="boolean_toggle"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
