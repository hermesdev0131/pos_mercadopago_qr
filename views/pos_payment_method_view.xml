<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_payment_method_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.mercadopago</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <!-- Position at the end of the FIRST group only (using parentheses for global selection) -->
            <!-- This ensures the field is added only once with visible label -->
            <xpath expr="(//sheet//group//group)[1]" position="inside">
                <field name="use_mercadopago_qr"/>
            </xpath>
        </field>
    </record>
</odoo>