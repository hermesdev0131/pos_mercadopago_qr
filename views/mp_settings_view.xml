<odoo>
    <record id="mp_settings_form" model="ir.ui.view">
        <field name="name">mp.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="MercadoPago" name="pos_mercadopago_qr">
                  <block title="MercadoPago Configuration">
                      <!-- <setting string="API Credentials" help="Enter your MP credentials here.">
                          <field name="mp_access_token"/>
                          <field name="mp_public_key"/>
                          <field name="mp_client_id"/>
                          <field name="mp_client_secret"/>
                      </setting> -->
                      <setting title="Access Token" help="MercadoPago Access Token">
                        <field name="mp_access_token"/>
                      </setting>

                      <setting title="Public Key" help="MercadoPago Public Key">
                        <field name="mp_public_key"/>
                      </setting>

                      <setting title="Client ID" help="MercadoPago App Client ID">
                        <field name="mp_client_id"/>
                      </setting>

                      <setting title="Client Secret" help="MercadoPago App Client Secret">
                        <field name="mp_client_secret"/>
                      </setting>
                  </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>